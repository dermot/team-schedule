require 'optparse'
require_relative '../lib/ncsl_schedule'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: ncsl_schedule_cron [options]"

  opts.on("-f","--config_file FILE",  "Path to the config file that defines the teams.") do |f|
    options[:config_file] = f
  end
end.parse!


teams = YAML.load_file(options[:config_file]).collect do |team_name, opts|
  NCSLSchedule::Team.new(team_name, opts[:age], opts[:url], opts[:early_arrival_mins])
end

teams.each{|t| puts t.schedule}
